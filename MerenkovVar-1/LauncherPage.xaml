<Page x:Class="MerenkovVar_1.LauncherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MerenkovVar_1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#003a67" Foreground="White">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="TimeTextBlock" FontSize="18" HorizontalAlignment="Center" Margin="0,10"/>

            <ComboBox x:Name="ServerComboBox" Margin="0,5"/>
            <Button x:Name="PlayButton" Content="Играть" IsEnabled="False" Background="#00fce6" Foreground="Black" Margin="0,10" HorizontalAlignment="Center" Click="PlayButton_Click"/>
            <Button x:Name="ChangeRegionButton" Content="Сменить регион" Background="#0069cf" Foreground="White" HorizontalAlignment="Center" Margin="0,5" Click="ChangeRegionButton_Click"/>
            <Button x:Name="DeleteAccountButton" Content="Удалить учетную запись" Background="#d9534f" Foreground="White"  Margin="0,5" Click="DeleteAccountButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
